<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Main Activity thumbnails style -->
    <style name="Thumbnail">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">sectionOnClickListener</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>


    <style name="section_expansion_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/section_expansion_text_color</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">40dp</item>

    </style>


</resources>

